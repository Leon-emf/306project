<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="pane" prefHeight="480.0" prefWidth="500.0" styleClass="darktheme" stylesheets="@../resources/css/view.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ctrl.InitViewController">
   <center>
      <VBox spacing="12.0" styleClass="conteneur" style="-fx-padding: 20px;">
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
         
         <!-- Titre -->
         <Label text="Configuration du Robot" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
         
         <!-- Étape 1 -->
         <VBox spacing="4.0" style="-fx-padding: 8px; -fx-background-color: rgba(55,65,81,0.5); -fx-background-radius: 8px;">
            <Label text="Étape 1 : Connexion Wi-Fi" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #60a5fa;" />
            <Label text="Connectez-vous au Wi-Fi du robot (MDP: link2014)" style="-fx-font-size: 12px; -fx-text-fill: #9ca3af;" />
         </VBox>
         
         <!-- Étape 2 -->
         <VBox spacing="8.0" style="-fx-padding: 8px; -fx-background-color: rgba(55,65,81,0.5); -fx-background-radius: 8px;">
            <Label text="Étape 2 : Initialisation" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #60a5fa;" />
            <HBox alignment="CENTER_LEFT" spacing="12.0">
               <Button fx:id="btnInit" mnemonicParsing="false" onAction="#init" text="Initialiser" prefWidth="120.0" />
               <Label fx:id="lblHostname" text="" style="-fx-text-fill: #10b981; -fx-font-weight: bold;" />
            </HBox>
         </VBox>
         
         <!-- Étape 3 -->
         <VBox spacing="8.0" style="-fx-padding: 12px; -fx-background-color: #1f2937; -fx-background-radius: 8px; -fx-border-color: #374151; -fx-border-radius: 8px; -fx-border-width: 1px;" VBox.vgrow="ALWAYS">
            <Label text="Étape 3 : Réseau Wi-Fi" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #60a5fa;" />
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <Button fx:id="btnScanner" disable="true" mnemonicParsing="false" onAction="#scan" text="Scanner" prefWidth="100.0" />
               <ProgressIndicator fx:id="loaderWifi" prefHeight="24.0" prefWidth="24.0" visible="false" />
            </HBox>
            <ListView fx:id="lstWifi" minHeight="100.0" prefHeight="140.0" VBox.vgrow="ALWAYS" />
            <Button fx:id="btnConnecter" disable="true" mnemonicParsing="false" onAction="#connect" text="Se connecter au réseau" prefHeight="36.0" maxWidth="Infinity" styleClass="button-primary" />
         </VBox>
         
         <!-- Étape 4 -->
         <VBox spacing="8.0" style="-fx-padding: 8px; -fx-background-color: rgba(55,65,81,0.5); -fx-background-radius: 8px;">
            <Label text="Étape 4 : Confirmation" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #60a5fa;" />
            <Label text="Attendez que le robot dise &quot;I'm ready&quot;" style="-fx-font-size: 12px; -fx-text-fill: #9ca3af;" />
         </VBox>
         
         <!-- Boutons -->
         <HBox spacing="12.0" alignment="CENTER_RIGHT">
            <Button fx:id="btnAnnuler" mnemonicParsing="false" onAction="#annuler" text="Annuler" prefWidth="100.0" styleClass="button-secondary" />
            <Button fx:id="btnTerminer" disable="true" mnemonicParsing="false" onAction="#terminer" text="Terminer" prefWidth="100.0" styleClass="button-success" />
         </HBox>
      </VBox>
   </center>
</BorderPane>
